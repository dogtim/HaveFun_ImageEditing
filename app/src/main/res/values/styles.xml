<resources>

    <style name="ActionImageView">
        <item name="android:layout_width">@dimen/top_icon_width</item>
        <item name="android:layout_height">@dimen/top_icon_width</item>
        <item name="android:padding">@dimen/top_icon_padding</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CloseImage">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_gravity">top|start</item>
        <item name="android:background">@drawable/close_background</item>
        <item name="android:src">@drawable/ic_remove</item>
        <item name="android:elevation">1dp</item>
    </style>

    <style name="BorderFrameLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/rounded_border_tv</item>
    </style>

</resources>
